controllers:
  main:
    containers:
      main:
        image:
          repository: traefik/whoami
          tag: latest
        resources:
          limits:
            cpu: 500m
            memory: 256Mi

service:
  main:
    controller: main
    ports:
      http:
        port: 80

ingress:
  main:
    hosts:
      - host: whoami.{{ .Values.domain }}
        paths:
          - path: /
            service:
              identifier: main
              port: http
